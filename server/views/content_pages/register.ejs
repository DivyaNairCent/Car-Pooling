<main class="container">
    <!-- Message Are-->
    <% if(messages.length > 0) {%>
        <div class="alert alert-danger">
            <%= messages  %>
        </div>
    <% } %>
    <div class="row">
        <div class="offset-md-4 col-md-4">
            <h1>Please Register</h1>
            <form  method="POST" autocomplete="off">
                <fieldset class="form-group">
                    <label for="username" style="text-align:left; margin-left:0px;">Username</label>
                    <input type="text" class="form-control"
                    name="username" placeholder="Enter username"
                    id="username" required autofocus>
                </fieldset>

                <fieldset class="form-group">
                    <label for="password" style="text-align:left; margin-left:0px;">Password</label>
                    <input type="password" class="form-control"
                    name="password" placeholder="Enter password"
                    id="password" required>
                </fieldset>

                <fieldset class="form-group">
                    <label for="email" style="text-align:left; margin-left:0px;">Email</label>
                    <input type="email" class="form-control"
                    name="email" placeholder="Enter email"
                    id="email" required>
                </fieldset>

                <fieldset class="form-group">
                    <label for="displayName" style="text-align:left; margin-left:0px; width:100%">Enter Full name</label>
                    <input type="displayName" class="form-control"
                    name="name" placeholder="Enter display name"
                    id="name" >
                </fieldset><br>

                <fieldset class="form-group text-right">
                    <input type="submit" class="btn btn-success" value="Register">
                    <a href="/users/register">
                        <input type ="buton" class="btn btn-warning" value="Cancel">
                    </a>
                </fieldset>

            </form>
        </div>
    </div>

</main>